@model IEnumerable<Product>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    <div class="col-md-12 container">
        <div class="col-md-12" style="position: relative; height: 75vh; ">
            <div class="row" style="height:150px;">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/img/img1.webp" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/img2.webp" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/img3.webp" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>


        <div class="col-md-12" style="position: relative; height: 75vh; ">
            <div class="row row-cols-1  row-cols-md-4 style="display: flex;justify-content:space-evenly;margin-top:20px;">
                @foreach (var item in Model)
                {
                    <div class="card-deck" style="margin-top:20px;">
                        <div class="card h-100" style="width: 18rem;">
                            <img src="~/images/@item.ProductImg" class="card-img-top" alt="..." style="object-fit:contain;">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.ProductName)</h5>
                                <p class="card-text"> Prix : @Html.DisplayFor(modelItem => item.ProductPrice)</p>
                                <button style="color:black;">@Html.ActionLink("Details", "Details", new { id = item.ProductID }) </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>