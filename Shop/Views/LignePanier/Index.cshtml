@model IEnumerable<LignePanier>

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

<h1>Ligne View</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LignePanierID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LigneQuantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>


            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LignePanierID)
                </td>
               
                <td>
                    <a asp-action="Plus" asp-route-id="@item.LignePanierID" class="btn btn-link px-2">
                        <i class="fas fa-plus-circle fa-lg"></i>
                    </a>
                    @Html.DisplayFor(modelItem => item.LigneQuantite)
                    <a asp-action="minus" asp-route-id="@item.LignePanierID" class="btn btn-link px-2">
                        <i class="fas fa-minus-circle fa-lg"></i>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    <img src="~/images/@item.ProductImg" style="width:35px;height:35px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>

                @*<td>
                        @Html.DisplayFor(modelItel => item.Price)
                    </td>*@
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.LignePanierID },
                    new { onclick = "return confirm('Are you sure you want to delete this Product ? )" })
                </td>
                <td>
                    <button><a href="@Url.Action("Add","Panier", new { ID = item.LignePanierID })"> Add</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>